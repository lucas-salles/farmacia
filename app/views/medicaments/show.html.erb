<% if flash[:notice] %>
  <div class="alert alert-info alert-dismissible fade show mt-3" role="alert">
    <%= flash[:notice] %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<h1 class="mt-5">Medicamento</h1>

<p class="mt-3">
  <strong>Nome:</strong>
  <%= @medicament.name %>
</p>

<p>
  <strong>Descrição:</strong>
  <%= @medicament.description %>
</p>

<p>
  <strong>Preço:</strong>
  <%= number_to_currency(@medicament.price, :unit => "R$ ", :separator => ",", :delimiter => ".") %>
</p>

<div class="mt-5">
  <%= link_to 'Voltar', medicaments_path, class: 'btn btn-primary' %>
  <%= link_to 'Editar', edit_medicament_path(@medicament), class: 'btn btn-primary' %>
</div>
